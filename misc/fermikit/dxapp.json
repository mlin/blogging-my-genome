{
  "name": "fermikit",
  "title": "fermikit",
  "summary": "fermikit",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Assembly"
  ],
  "inputSpec": [
    {
      "name": "reads",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.fastq.gz", "*.fq.gz"]
    },
    {
      "name": "read_length",
      "class": "int",
      "default": 150
    },
    {
      "name": "genome_size",
      "class": "string",
      "default": "3g"
    },
    {
      "name": "output_name",
      "class": "string",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "unitigs",
      "class": "file"
    },
    {
      "name": "fmd_index",
      "class": "file"
    },
    {
      "name": "logs",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/fermikit.sh",
    "execDepends": [{"name": "pigz"}],
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_ssd1_x16"
      }
    }
  },
  "authorizedUsers": []
}
