{
  "name": "bam_to_fastq",
  "title": "BAM to FASTQ",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "resources": [],
  "inputSpec": [
    {
      "name": "input_bam",
      "label": "SAM/BAM File",
      "class": "file",
      "optional": false
    },
    {
      "name": "paired",
      "label": "paired",
      "class": "boolean",
      "optional": true,
      "default": true
    },
    {
      "name": "params",
      "label": "Parameters",
      "class": "string",
      "optional": true,
      "default": ""
    }
  ],
  "outputSpec": [
    {
      "name": "fastq_file",
      "label": "Fastq File",
      "class": "file"
    },
    {
      "name": "paired_fastq_file",
      "label": "Paired Fastq File",
      "optional": true,
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/picard_sam_to_fastq.py",
    "execDepends": [{"name": "openjdk-6-jre-headless"},
                    {"name": "libncurses5"},
                    {"name": "libjemalloc1"},
                    {"name": "libsnappy1"},
                    {"name": "libbz2-1.0"},
                    {"name": "pigz"}]
  },
  "access": {
    "network": [
      "*"
    ]
  }
}
